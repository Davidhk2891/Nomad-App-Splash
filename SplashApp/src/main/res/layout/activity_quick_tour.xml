<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.carownerside.QuickTourActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/quickTourViewP"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/quickTourInterface"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:background="#90000000"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/previousQT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:textColor="#ffffff"
        android:text="@string/act_quick_tour_back"
        android:layout_marginBottom="-3dp"
        android:layout_marginStart="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/nextQT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:textColor="#ffffff"
        android:text="@string/act_quick_tour_next"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="-3dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        tools:ignore="RelativeOverlap" />

</RelativeLayout>