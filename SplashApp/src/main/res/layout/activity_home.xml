<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home"
    tools:context="com.nomadapp.splash.ui.activity.standard.HomeActivity">

    <RelativeLayout
        android:id="@+id/secondRel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3388C0FD"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <fragment
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.nomadapp.splash.ui.activity.standard.HomeActivity">

        </fragment>

        <FrameLayout
            android:id="@+id/tool_bar_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                layout="@layout/custom_nav_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </FrameLayout>

        <ImageView
            android:id="@+id/serviceMarkerView"
            android:layout_centerInParent="true"
            android:src="@drawable/servicesmarker"
            android:layout_alignBottom="@+id/mapCenterReference"
            android:visibility="gone"
            android:layout_width="80dp"
            android:layout_height="100dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/mapCenterReference"
            android:text="@string/threeDots"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="6dp" />

        <RelativeLayout
            android:id="@+id/splasher_info_toco_back_space"
            android:layout_below="@+id/tool_bar_holder"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:visibility="gone"
            android:gravity="center"
            android:background="#CCffffff"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/countDownClockRela"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/carAvailTitle"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="3dp"
                    android:text="@string/act_car_owner_carAvailableUntil"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:textSize="12sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/carAvailTime"
                    android:layout_below="@+id/carAvailTitle"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:textStyle="bold"
                    android:textSize="21sp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!--
                <TextView
                    android:id="@+id/cdcTitle"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:text="@string/act_car_owner_timeLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/cdcTime"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/cdcTitle"
                    android:text="@string/act_car_owner_cdcTime"
                    android:textSize="40sp"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                 -->

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/splasherInfoHolder"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <ImageView
                    android:id="@+id/splasherPicInStatusWindow"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/theemptyface"
                    android:contentDescription="@string/act_car_owner_profPicWindow" />

                <LinearLayout
                    android:id="@+id/spalsher_stats_co_linear"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/splasher_stats_co_splasherTitle"
                        android:text="@string/act_car_owner_yourSplasher"
                        android:textColor="@color/ColorPrimaryDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/splasher_stats_co_splasherName"
                        android:text="@string/threeDots"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <me.zhanghai.android.materialratingbar.MaterialRatingBar
                        android:id="@+id/splasher_status_co_ratingBar"
                        android:layout_width="85dp"
                        android:layout_height="18dp"
                        style="@style/Widget.MaterialRatingBar.RatingBar"
                        android:numStars="5"/>

                    <TextView
                        android:id="@+id/splasher_stats_co_numWashes"
                        android:text="@string/threeDots"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:id="@+id/splasher_stats_co_vertiSepa1"
                    android:text="@string/act_car_owner_location_vertSepa"
                    android:textSize="50sp"
                    android:layout_marginTop="-6dp"
                    android:layout_marginStart="-10dp"
                    android:textColor="#9E9E9E"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/splasher_stats_co_distance_linear"
                    android:orientation="vertical"
                    android:layout_marginTop="-9dp"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/splasher_status_co_distance_title"
                        android:text="@string/act_car_owner_distance"
                        android:textColor="@color/ColorPrimaryDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/splasher_status_co_distance_text"
                        android:text="@string/threeDots"
                        android:layout_marginTop="4dp"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:id="@+id/splasher_stats_co_vertiSepa2"
                    android:text="@string/act_car_owner_location_vertSepa"
                    android:textSize="50sp"
                    android:layout_marginTop="-6dp"
                    android:layout_marginStart="-14dp"
                    android:textColor="#9E9E9E"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/splasher_stats_co_call"
                    android:src="@drawable/ic_call_black_24dp"
                    android:layout_marginStart="-6dp"
                    android:onClick="callSplasher"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

        </RelativeLayout>

            <!--Splasher's e-wallet UI-->
            <RelativeLayout
                android:id="@+id/splashWalletRelative"
                android:layout_below="@+id/tool_bar_holder"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                android:padding="8dp"
                android:onClick="goToMyWallet"
                android:background="@drawable/transparent_black_curved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/splashWalletImg"
                    android:src="@drawable/ic_account_balance_wallet_black_24dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/splashWalletTextView"
                    android:layout_toEndOf="@+id/splashWalletImg"
                    android:layout_marginStart="10dp"
                    android:textColor="#ffffff"
                    android:text="@string/carOwner_act_java_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <!--//////////////////////-->

            <net.qiujuer.genius.ui.widget.SeekBar
                android:id="@+id/updatedSeekBarOne"
                android:layout_width="wrap_content"
                android:padding="6dp"
                android:background="#CCffffff"
                android:layout_above="@+id/majorButtonsBackSpace"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                app:gMax="3"
                app:gMin="0"
                app:gValue="0"
                app:gIndicator="none"
                app:gTickSize="4dp"/>

            <RelativeLayout
                android:id="@+id/majorButtonsBackSpace"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:background="#CCffffff"
                android:layout_height="90dp">

                <RelativeLayout
                    android:id="@+id/request_window_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/carAddressTitle"
                        android:text="@string/act_car_owner_location_CarAddress"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:textSize="12sp"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/ColorPrimaryDark"
                        android:layout_marginTop="1dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/carAddressInfoText"
                        android:layout_below="@+id/carAddressTitle"
                        android:text="@string/threeDots"
                        android:layout_alignParentStart="true"
                        android:textSize="12sp"
                        android:layout_marginStart="7dp"
                        android:layout_width="170dp"
                        android:layout_height="30dp" />

                    <TextView
                        android:id="@+id/verticalSepa"
                        android:text="@string/act_car_owner_location_vertSepa"
                        android:layout_centerHorizontal="true"
                        android:textSize="38sp"
                        android:layout_marginTop="-6dp"
                        android:textColor="#9E9E9E"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View
                        android:id="@+id/horizontalSepa"
                        android:layout_width="300dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/carAddressInfoText"
                        android:layout_height="2dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:background="#9E9E9E"/>

                    <TextView
                        android:id="@+id/verticalSepa2"
                        android:text="@string/act_car_owner_location_vertSepa"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/horizontalSepa"
                        android:textSize="38sp"
                        android:layout_marginTop="-6dp"
                        android:textColor="#9E9E9E"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/carWindowTitle"
                        android:text="@string/act_car_owner_car"
                        android:layout_alignParentStart="true"
                        android:textSize="12sp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="1dp"
                        android:textColor="@color/ColorPrimaryDark"
                        android:layout_below="@+id/horizontalSepa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/carInfoText"
                        android:layout_below="@+id/carWindowTitle"
                        android:text="@string/threeDots"
                        android:layout_alignParentStart="true"
                        android:textSize="12sp"
                        android:layout_marginStart="7dp"
                        android:layout_width="170dp"
                        android:layout_height="30dp" />

                    <TextView
                        android:id="@+id/carAddDescTitle"
                        android:text="@string/act_car_owner_location_carAddressDescTitle"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/verticalSepa"
                        android:textSize="12sp"
                        android:textColor="@color/ColorPrimaryDark"
                        android:layout_marginStart="-6dp"
                        android:layout_marginTop="1dp"
                        android:layout_below="@+id/horizontalSepa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/carAddDescText"
                        android:layout_below="@+id/carAddDescTitle"
                        android:text="@string/threeDots"
                        android:layout_alignStart="@+id/carAddDescTitle"
                        android:textSize="12sp"
                        android:layout_marginStart="2dp"
                        android:layout_width="160dp"
                        android:layout_height="30dp" />

                    <TextView
                        android:id="@+id/carServiceTitle"
                        android:text="@string/act_car_owner_location_serviceTtypeTitle"
                        android:layout_toEndOf="@+id/verticalSepa"
                        android:textSize="12sp"
                        android:textColor="@color/ColorPrimaryDark"
                        android:layout_marginStart="-6dp"
                        android:layout_marginTop="1dp"
                        android:layout_below="@+id/horizontalSepa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/carServiceText"
                        android:layout_below="@+id/carServiceTitle"
                        android:text="@string/threeDots"
                        android:layout_alignStart="@+id/carAddDescTitle"
                        android:textSize="12sp"
                        android:layout_marginStart="2dp"
                        android:layout_width="80dp"
                        android:layout_height="30dp" />

                    <TextView
                        android:id="@+id/windowPrice"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="30dp"
                        android:layout_below="@+id/horizontalSepa"
                        android:layout_marginTop="8dp"
                        android:text="@string/threeDots"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </RelativeLayout>

            <Button
                android:id="@+id/findMeAWash"
                android:visibility="visible"
                android:background="@drawable/btn_shape"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:text="@string/act_car_owner_washMyCar"
                android:textColor="#fff"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="70dp" />

            <Button
                android:id="@+id/letsWashACar"
                android:background="@drawable/btn_shape"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:text="@string/act_car_owner_letWashCar"
                android:textColor="#fff"
                android:onClick="letsWashACar"
                android:textSize="15sp"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="70dp" />

            <Button
                android:id="@+id/setArea"
                android:background="@drawable/btn_shape"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:text="@string/splasher_services_setEpicenter"
                android:textColor="#fff"
                android:onClick="setNewArea"
                android:textSize="15sp"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/liveFetchedAddress"
                android:layout_above="@+id/setArea"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                android:textAlignment="center"
                android:text="@string/threeDots"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <net.qiujuer.genius.ui.widget.SeekBar
                android:id="@+id/serviceAreaSeekbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_above="@+id/setArea"
                android:layout_marginBottom="10dp"
                app:gMax="10"
                app:gMin="1"
                app:gValue="0"
                app:gIndicator="none"
                app:gRippleColor="@color/ColorPrimary"
                app:gScrubberColor="@color/ColorPrimaryDark"
                app:gScrubberStroke="4dp"
                app:gThumbColor="@color/ColorPrimary"
                app:gThumbSize="6dp"
                app:gTickSize="3dp"
                app:gTouchSize="12dp"
                app:gTrackColor="@color/grey_500"
                app:gMirrorForRtl="false"
                app:gTrackStroke="2dp"/>

            <TextView
                android:id="@+id/rangeText"
                android:layout_above="@+id/majorButtonsBackSpace"
                android:textAlignment="center"
                android:layout_centerHorizontal="false"
                android:visibility="gone"
                android:background="#CCffffff"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"/>

            <!--Do not forget to set this RelativeLayout back visible-->
            <!--////Splasher Related pop up view////-->
            <RelativeLayout
                android:id="@+id/carOwnerPrevDetailsRelative"
                android:background="@drawable/bg_blueborder_stroke_andcolor_curved"
                android:layout_width="320dp"
                android:layout_height="350dp"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

                <LinearLayout
                    android:id="@+id/prevDetTitleLinear"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/cuteLittleCarBlue"
                        android:src="@drawable/cutebluecar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/prevDetailsTitle"
                        android:textSize="20sp"
                        android:layout_marginStart="18dp"
                        android:text="@string/act_car_owner_carOwnerDets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:id="@+id/sepaCarOwnerDetails"
                    android:layout_width="300dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/prevDetTitleLinear"
                    android:layout_height="2dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:background="#29b6f6"/>

                <!--Subject to Change-->
                <LinearLayout
                    android:id="@+id/detsPicsAndStatsLinearHor"
                    android:layout_below="@+id/sepaCarOwnerDetails"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/carOwnerDetsProfilePic"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/theemptyface"
                        android:contentDescription="@string/act_car_owner_profPicWindow" />

                    <LinearLayout
                        android:id="@+id/splashWantedLinear"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="UseCompoundDrawables">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="@string/act_car_owner_levelWanted"/>

                        <ImageView
                            android:id="@+id/infoWindowSplashBadge"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:contentDescription="@string/act_car_owner_contentDesc" />

                    </LinearLayout>

                </LinearLayout>
                <!--/////////////////-->

                <TextView
                    android:id="@+id/distanceDetsTitle"
                    android:layout_below="@+id/detsPicsAndStatsLinearHor"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/act_car_owner_distanceTitle"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/distanceDetsValue"
                    android:layout_below="@+id/detsPicsAndStatsLinearHor"
                    android:layout_toEndOf="@+id/distanceDetsTitle"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/act_car_owner_distanceValue"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/availableUntilDetsTitle"
                    android:layout_below="@+id/distanceDetsTitle"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/act_car_owner_availableTitle"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/availableUntilDetsValue"
                    android:layout_below="@+id/distanceDetsTitle"
                    android:layout_toEndOf="@+id/availableUntilDetsTitle"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/act_car_owner_availableValue"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tomorrowText"
                    android:layout_below="@+id/distanceDetsTitle"
                    android:layout_toEndOf="@+id/availableUntilDetsValue"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="17dp"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/youGetDetsTitle"
                    android:layout_below="@+id/availableUntilDetsTitle"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/act_car_owner_youGetTitle"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/youGetDetsValue"
                    android:layout_below="@+id/availableUntilDetsTitle"
                    android:layout_toEndOf="@+id/youGetDetsTitle"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/act_car_owner_youGetValue"
                    android:textColor="#ffffff"
                    android:padding="7dp"
                    android:background="@color/green_500"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/goAndCancelLinear"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@+id/youGetDetsTitle"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/cancelCODets"
                        android:onClick="cancelCODets"
                        android:background="@drawable/btn_shape"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:text="@string/act_car_owner_cancel"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="ButtonStyle" />

                    <Button
                        android:id="@+id/goCODets"
                        android:onClick="goCODets"
                        android:background="@drawable/btn_shape"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_marginStart="35dp"
                        android:text="@string/act_car_owner_go"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
