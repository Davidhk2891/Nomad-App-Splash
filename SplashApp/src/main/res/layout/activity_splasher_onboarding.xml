<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".ui.activity.standard.SplasherOnboarding">    <!--Splasher Onboarding 2 Fragment Container-->    <RelativeLayout        android:id="@+id/splasher_onboarding_2_frag_container"        android:visibility="gone"        android:layout_alignParentBottom="true"        android:layout_width="match_parent"        android:layout_height="match_parent" />    <ImageView        android:id="@+id/splasher_onboarding_logo"        android:src="@drawable/splashlogowithdropscropped"        android:layout_width="80dp"        android:layout_height="130dp"        android:layout_marginTop="10dp"        android:layout_centerHorizontal="true"        tools:ignore="ContentDescription" />    <RelativeLayout        android:id="@+id/splasher_onboarding_scroller_relative"        android:layout_marginTop="80dp"        android:layout_centerInParent="true"        android:layout_width="match_parent"        android:layout_height="wrap_content">        <EditText            android:id="@+id/splasher_onboarding_name"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:imeOptions="actionNext"            android:ems="16"            android:layout_centerHorizontal="true"            android:hint="@string/act_become_splash_signUp_first"            android:inputType="textPersonName"            android:maxLines="1"            android:textAllCaps="false"            tools:ignore="Autofill" />        <EditText            android:id="@+id/splasher_onboarding_last"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:imeOptions="actionNext"            android:layout_below="@+id/splasher_onboarding_name"            android:layout_centerHorizontal="true"            android:layout_marginTop="10dp"            android:ems="16"            android:hint="@string/act_become_splash_signUp_last"            android:inputType="textPersonName"            android:maxLines="1"            android:textAllCaps="false"            tools:ignore="Autofill" />        <EditText            android:id="@+id/splasher_onboarding_phone"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_below="@+id/splasher_onboarding_last"            android:layout_alignStart="@+id/splasher_onboarding_name"            android:layout_alignEnd="@+id/splasher_onboarding_name"            android:layout_centerHorizontal="true"            android:layout_marginTop="10dp"            android:hint="@string/act_become_splash_signUp_phone"            android:imeOptions="actionDone"            android:maxLength="10"            android:inputType="phone"            android:textAllCaps="false"            tools:ignore="Autofill" />    </RelativeLayout>    <Button        android:id="@+id/splasher_onboarding_button"        android:background="@drawable/btn_shape"        android:layout_centerHorizontal="true"        android:layout_alignParentBottom="true"        android:layout_marginBottom="10dp"        android:layout_marginStart="10dp"        android:layout_marginEnd="10dp"        android:layout_alignParentStart="true"        android:layout_alignParentEnd="true"        android:textColor="#ffffff"        android:text="@string/act_become_splash_next"        android:layout_width="wrap_content"        android:layout_height="wrap_content" /></RelativeLayout>