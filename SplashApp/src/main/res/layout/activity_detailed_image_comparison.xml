<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nomadapp.splash.ui.activity.carownerside.DetailedImageComparisonActivity">

    <!--
     here we continue
    -->

    <ImageView
        android:id="@+id/beforeWashFull"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="465dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/afterWashFull"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="465dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/switchBeforeText"
        android:text="@string/act_detailed_comparison_before"
        android:layout_toStartOf="@+id/switchBeforeAfter"
        android:layout_alignBottom="@+id/switchBeforeAfter"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/switchAfterText"
        android:text="@string/act_detailed_comparison_after"
        android:layout_toEndOf="@+id/switchBeforeAfter"
        android:layout_alignBottom="@+id/switchBeforeAfter"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Switch
        android:id="@+id/switchBeforeAfter"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/beforeWashFull"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
